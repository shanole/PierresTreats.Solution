@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model List<PierresTreats.Models.Flavor>

  <h2>All flavors</h2>

  @if (Model.Count == 0)
  {
    <p>There are no flavors yet.</p>
  }

  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Description}","Details", new { id = flavor.FlavorId})</li>
    }
  </ul>

<ul class="menu-links">
  <li>@Html.ActionLink("Add a new flavor","Create")</li>
</ul>

<hr />
<ul class="menu-links">
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>