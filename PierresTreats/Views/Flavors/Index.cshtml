@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model List<PierresTreats.Models.Flavor>

  <h2>All flavors</h2>

  @if (Model.Count == 0)
  {
    <p>There are no flavors yet.</p>
  }


  <div class="row">
    <div class="col-md-6">
      <h4>All flavors:</h4>
      @foreach(Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Description}","Details", "Flavors", new {id = flavor.FlavorId})</li>
      }
    </div>
    <div class="col-md-6">
      <h4>Your flavors:</h4>
        @foreach (Flavor flavor in ViewBag.UserFlavors)
        {
          <li>@Html.ActionLink($"{flavor.Description}","Details", new { id = flavor.FlavorId})</li>
        }
    </div>
  </div>

<hr />
<ul class="menu-links">
  <li>@Html.ActionLink("Add a new flavor","Create")</li>
  <li>@Html.ActionLink("Back to staff home","Index", "Account")</li>
  <li>@Html.ActionLink("Home","Index","Home")</li>
</ul>