@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h4>Add new flavor</h4>

@using(Html.BeginForm())
{
  @Html.Label("Flavor description")
  @Html.TextBoxFor(model => model.Description, new { @class = "form-control", required="required"})

  @Html.Label("Mark if vegan")
  @Html.EditorFor(model => model.IsVegan, new { @required="required"}) <br/>

  @Html.Label("Mark if gluten-free")
  @Html.EditorFor(model => model.IsGlutenFree, new { @required="required"})

  <input type="submit" value="Add" class="btn btn-default" required="true" />
}

<hr />
<ul class="menu-links">
  <li>@Html.ActionLink("Home","Index","Home")</li>
  <li>@Html.ActionLink("Back to all flavors", "Index")</li>
</ul>